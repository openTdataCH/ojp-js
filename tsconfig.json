{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2022"],

    "rootDir": "src",
    "outDir": "./lib",
    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Ensures .d.ts files are generated.
    "declaration": true,
    // Ensures JavaScript files are also emitted.
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"]
}
